	sed 's!XHISHODIR!$(XHISHODIR)!' XHisho.ad.sed >$@
#endif

#ifdef I18N
XHisho.jp:: XHisho.jp.sed
	sed 's!XHISHODIR!$(XHISHODIR)!' XHisho.jp.sed | sed 's!IXHISHODIR!$(IXHISHODIR)!' >$@
#endif

xhisho.man:: man1/xhisho.1
