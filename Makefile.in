all: makefile
	make -f _makefile

makefile: Imakefile config.h image/Imakefile xadl/Imakefile libmhc/Imakefile
	./my_xmkmf
	cd image;../my_xmkmf
	cd xadl;../my_xmkmf
	cd libmhc;../my_xmkmf
	mv makefile _makefile

clean:
	make -f _makefile clean
	rm -f _makefile */makefile

install:
	make -f _makefile install

install.man:
	make -f _makefile install.man
