all: Makefile
	make -f Makefile

Makefile: makefile Imakefile config.h config.tmpl
	xmkmf

makefile:
	./configure

config.h:
	./configure

clean: Makefile
	make -f Makefile clean

install: Makefile
	make -f Makefile install

install.man: Makefile
	make -f Makefile install.man

config.tmpl:
	csh -c 'echo "CC = @CC@" > config.tmpl'
