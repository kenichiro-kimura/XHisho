all: Makefile xadl/Makefile
	make -f Makefile

Makefile: makefile Imakefile config.h image/Imakefile xadl/Imakefile libmhc/Imakefile
	xmkmf
	cd image;xmkmf
	cd xadl;xmkmf
	cd libmhc;xmkmf

clean: Makefile
	make -f Makefile clean
	cd xadl;make clean

install: Makefile
	make -f Makefile install

install.man: Makefile
	make -f Makefile install.man
