all: Makefile xadl/Makefile
	make -f Makefile
	cd xadl;make -f Makefile

Makefile: makefile Imakefile config.h image/Imakefile
	xmkmf
	cd image;xmkmf

xadl/Makefile: xadl/Makefile.in
	./configure

makefile: makefile.in
	./configure

config.h: config.h.in
	./configure

Imakefile: Imakefile.in
	./configure

image/Imakefile: image/Imakefile.in
	./configure

clean: Makefile
	make -f Makefile clean
	cd xadl;make clean

install: Makefile
	make -f Makefile install

install.man: Makefile
	make -f Makefile install.man
