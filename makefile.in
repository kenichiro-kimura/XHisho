all: Makefile xadl/Makefile
	make -f Makefile

Makefile: makefile Imakefile config.h image/Imakefile xadl/Imakefile
	xmkmf
	cd image;xmkmf
	cd xadl;xmkmf

makefile: makefile.in
	./configure

config.h: config.h.in
	./configure

Imakefile: Imakefile.in
	./configure

image/Imakefile: image/Imakefile.in
	./configure

xadl/Imakefile: xadl/Imakefile.in
	./configure

clean: Makefile
	make -f Makefile clean
	cd xadl;make clean

install: Makefile
	make -f Makefile install

install.man: Makefile
	make -f Makefile install.man
